@model List<Lab_Activity_2.Models.Instructor>

<h2>Instructors</h2>


<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Tenure Status</th>
            <th>Rank</th>
            <th>Hiring Date</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var instructor in Model)
        {
            <tr>
                <td>@instructor.Id</td>
                <td>@instructor.FirstName</td>
                <td>@instructor.LastName</td>
                <td>@instructor.TenureStatus</td>
                <td>@instructor.Rank</td>
                <td>@instructor.HiringDate.ToShortDateString()</td>
                <td>@instructor.Email</td>
                <td>
                    <a asp-action="ShowDetails" asp-route-id="@instructor.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@instructor.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<form asp-controller="Instructor" asp-action="AddInstructor">
    <button type="submit" class="btn btn-primary">Add Instructor</button>
</form>